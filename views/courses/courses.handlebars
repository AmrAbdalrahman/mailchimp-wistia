<div class="container">

    <div class="row">

        <h2 class="text-center">All courses</h2>
        <hr/>

        {{#each courses}}

            <div class="col-md-4">

                <a href="/courses/{{_id}}"
                   style="text-decoration: none; color: #34495e">
                    <div class="panel panel-default">

                        <div class="panel-body" style="border:0px;height:250px;overflow-y:auto">
                            <h3>{{title}}</h3>
                            <p>{{desc}}</p>
                        </div>

                    </div>
                </a>
            </div>
        {{/each}}

    </div>

</div>
